@page
@{
    Layout = "~/Pages/Shared/_LayoutUserPage.cshtml";
}
@section PageSpecificStyles {
    <link rel="stylesheet" href="~/css/UserPageHome.css" asp-append-version="true" />
}
<!doctype html>
<!-- Hero Section -->
<section class="hero-section flex items-center justify-center text-white">
    <div class="text-center">
        <h1 class="text-6xl font-bold mb-4 text-yellow-400">Premium Koi Auctions</h1>
        <p class="text-2xl mb-8">Discover the finest Koi fish from top Japanese breeders</p>
        <a href="../auction/auction.html">
            <button class="gradient-button px-8 py-4 rounded-full text-white text-lg font-medium shadow-lg">
                View Auctions
            </button>
        </a>
    </div>
</section>

<!-- Featured Brands -->
<section class="py-16 bg-white">
    <div class="container mx-auto px-6">
        <h2 class="text-4xl font-bold text-center mb-4 text-gray-800">Featured Breeders</h2>
        <p class="text-center text-gray-600 mb-12">Expert breeders with generations of experience</p>
        <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-8">
            <div class="brand-card rounded-xl shadow-lg p-8 text-center">
                <img src="../anh/izumiya-logo.png" alt="Dainichi" class="mx-auto mb-4 rounded-full border-4 border-yellow-400">
                <h3 class="text-xl font-semibold text-gray-800">Dainichi</h3>
            </div>
            <div class="brand-card rounded-xl shadow-lg p-8 text-center">
                <img src="../anh/izumiya-logo.png" alt="Sakai" class="mx-auto mb-4 rounded-full border-4 border-yellow-400">
                <h3 class="text-xl font-semibold text-gray-800">Sakai</h3>
            </div>
            <div class="brand-card rounded-xl shadow-lg p-8 text-center">
                <img src="../anh/marudo-logo.png" alt="Marudo" class="mx-auto mb-4 rounded-full border-4 border-yellow-400">
                <h3 class="text-xl font-semibold text-gray-800">Marudo</h3>
            </div>
            <div class="brand-card rounded-xl shadow-lg p-8 text-center">
                <img src="../anh/kanno-logo.png" alt="Kanno" class="mx-auto mb-4 rounded-full border-4 border-yellow-400">
                <h3 class="text-xl font-semibold text-gray-800">Kanno</h3>
            </div>
        </div>
    </div>
</section>

<!-- Live Auctions -->
<section class="py-16 bg-gradient-to-b from-white to-gray-100">
    <div class="container mx-auto px-6">
        <h2 class="text-4xl font-bold text-center mb-4 text-gray-800">Live Auctions</h2>
        <p class="text-center text-gray-600 mb-12">Bid on exceptional Koi specimens</p>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <div class="auction-card bg-white rounded-xl shadow-lg overflow-hidden">
                <div class="relative">
                    <img src="../anh/a1.jpg" alt="Koi Fish" class="w-full h-64 object-cover">
                    <div class="absolute top-4 right-4 bg-yellow-400 text-gray-800 px-4 py-1 rounded-full font-medium">
                        Featured
                    </div>
                </div>
                <div class="p-6">
                    <h3 class="text-xl font-semibold mb-2 text-gray-800">Premium Kohaku Koi</h3>
                    <div class="flex justify-between items-center mb-4">
                        <span class="text-gray-600">Current Bid</span>
                        <span class="text-2xl font-bold text-red-500">$2,500</span>
                    </div>
                    <a href="../auction/auction.html">
                        <button class="gradient-button w-full py-3 text-white rounded-full">
                            Place Bid
                        </button>
                    </a>
                </div>
            </div>

            <div class="auction-card bg-white rounded-xl shadow-lg overflow-hidden">
                <div class="relative">
                    <img src="../anh/a2.jpg" alt="Koi Fish" class="w-full h-64 object-cover">
                    <div class="absolute top-4 right-4 bg-blue-500 text-white px-4 py-1 rounded-full font-medium">
                        New
                    </div>
                </div>
                <div class="p-6">
                    <h3 class="text-xl font-semibold mb-2 text-gray-800">Showa Sanshoku</h3>
                    <div class="flex justify-between items-center mb-4">
                        <span class="text-gray-600">Current Bid</span>
                        <span class="text-2xl font-bold text-red-500">$3,200</span>
                    </div>
                    <a href="../auction/auction.html">
                        <button class="gradient-button w-full py-3 text-white rounded-full">
                            Place Bid
                        </button>
                    </a>
                </div>
            </div>

            <div class="auction-card bg-white rounded-xl shadow-lg overflow-hidden">
                <div class="relative">
                    <img src="../anh/a3.jpg" alt="Koi Fish" class="w-full h-64 object-cover">
                    <div class="absolute top-4 right-4 bg-green-500 text-white px-4 py-1 rounded-full font-medium">
                        Hot
                    </div>
                </div>
                <div class="p-6">
                    <h3 class="text-xl font-semibold mb-2 text-gray-800">Taisho Sanshoku</h3>
                    <div class="flex justify-between items-center mb-4">
                        <span class="text-gray-600">Current Bid</span>
                        <span class="text-2xl font-bold text-red-500">$1,800</span>
                    </div>
                    <a href="../auction/auction.html">
                        <button class="gradient-button w-full py-3 text-white rounded-full">
                            Place Bid
                        </button>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

