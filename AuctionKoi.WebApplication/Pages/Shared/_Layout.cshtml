<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>KoiAuction - Premium Koi Fish Auctions</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/_Layout.css" asp-append-version="true" />
    @RenderSection("PageSpecificStyles", required: false)

</head>


<body class="bg-gray-50">
   
    <!-- Top Navigation Bar -->
    <nav class="fixed w-full z-50 nav-menu text-white">
        <div class="container mx-auto px-6 py-4">
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <img src="~/imgs/image.png" alt="KoiAuction Logo" class="h-10 rounded-full border-2 border-yellow-400">
                    <span class="ml-3 text-2xl font-bold text-white">KoiAuction</span>
                </div>
                <div class="hidden md:flex items-center space-x-8">
                    <a href="../Index" class="menu-item text-lg font-medium">Trang chủ</a>
                    <a href="../UserPage/Auction" onclick="return checkLogin();" class="menu-item text-lg font-medium">Đấu giá</a>
                    <a href="../GuestPage/GuestAbout" class="menu-item text-lg font-medium">Thông tin</a>
                </div>
                <div class="flex items-center space-x-4">
                    <a href="../Login/Login">
                        <button class="px-6 py-2 border-2 border-white rounded-full hover:bg-white hover:text-gray-800 transition-all">
                            Đăng nhập
                        </button>
                    </a>
                    <a href="../Register/Register">
                        <button class="px-6 py-2 bg-yellow-500 text-gray-800 rounded-full hover:bg-yellow-400 transition-all">
                            Đăng ký
                        </button>
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main>
        @RenderBody()
       
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white py-12">
        <div class="container mx-auto px-6">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <div>
                    <h4 class="text-xl font-semibold mb-4 text-yellow-400">About Us</h4>
                    <p class="text-gray-400">Premium Koi fish auctions platform connecting collectors with top Japanese breeders.</p>
                </div>
                <div>
                    <h4 class="text-xl font-semibold mb-4 text-yellow-400">Quick Links</h4>
                    <ul class="space-y-2">
                        <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Home</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Auctions</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition-colors">About</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Contact</a></li>
                    </ul>
                </div>
                <div>
                    <h4 class="text-xl font-semibold mb-4 text-yellow-400">Contact</h4>
                    <ul class="text-gray-400 space-y-2">
                        <li>Email: 123@gmail.com</li>
                        <li>Phone: 123-456</li>
                        <li>Address: TP.HCM, Việt Nam</li>
                    </ul>
                </div>
                <div>
                    <h4 class="text-xl font-semibold mb-4 text-yellow-400">Newsletter</h4>
                    <form class="space-y-4">
                        <input type="email" placeholder="Enter your email"
                               class="w-full px-4 py-2 rounded-full bg-gray-800 text-white border border-gray-700 focus:border-yellow-400 focus:outline-none">
                        <button class="gradient-button w-full px-4 py-2 text-white rounded-full">
                            Subscribe
                        </button>
                    </form>
                </div>
            </div>
            <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400">
                <p>&copy; 2024 KoiAuction. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script>
        function checkLogin() {
            const isLoggedIn = false; // Thay giá trị này bằng trạng thái đăng nhập thực tế
            if (!isLoggedIn) {
                alert("Bạn phải đăng nhập để xem Auctions.");
                return false;
            }
            return true;
        }
    </script>
</body>
</html>
