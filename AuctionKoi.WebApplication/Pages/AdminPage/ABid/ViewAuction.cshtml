@page
@model AuctionKoi.WebApplication.Pages.AdminPage.ABid.ViewAuctionsModel
@{
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="dashboard-wrapper">
    <div class="container-fluid dashboard-content">
        <div class="page-header">
            <h2 class="pageheader-title">Danh Sách Các Trận Đấu Giá</h2>
        </div>

        <div class="card">
            <h5 class="card-header">Trận Đấu Giá Hiện Có</h5>
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Bắt Đầu</th>
                            <th>Kết Thúc</th>
                            <th>Trạng Thái</th>
                            <th>Phương Thức</th>
                            <th>Hành Động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var auction in Model.Auctions)
                        {
                            <tr>
                                <td>@auction.AuctionID</td>
                                <td>@auction.StartTime</td>
                                <td>@auction.EndTime</td>
                                <td>@auction.Status</td>
                                <td>@auction.Method</td>
                                <td>
                                    <a class="btn btn-primary btn-sm" asp-page="/AdminPage/ABid/EditAuction" asp-route-id="@auction.AuctionID">Sửa</a>
                                    <a class="btn btn-danger btn-sm" asp-page="/AdminPage/ABid/DeleteAuction" asp-route-id="@auction.AuctionID">Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a class="btn btn-success" asp-page="/AdminPage/ABid/AddAuction">Thêm Trận Đấu Giá</a>
            </div>
        </div>
    </div>
</div>
